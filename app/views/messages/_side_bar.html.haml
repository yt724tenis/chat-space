.side
  .side-bar__header
    .side-bar__top-items
      = current_user.name
      %ul.side-bar__top-items__icon
        =link_to new_group_path do
          =icon('fas', 'pen-square', class: "side__btn--icon")
        =link_to edit_user_path(current_user) do
          =icon('fas', 'cog', class: "side__btn--icon")
  .side-bar__group-list
    - current_user.groups.each do |group|
      .side-bar__group
        = link_to group_messages_path(group) do
          .side-bar__group-name
            = group.name
          .side-bar__group-message
            = group.show_last_message
        